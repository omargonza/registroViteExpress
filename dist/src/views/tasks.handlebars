<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
            <form action="/list" method="POST">
    <div class="form-group">
        <input type="text" name="nombre_tablero" required class="form-control" placeholder="nombre_tablero" autofocus>
    </div>
    <div class="form-group">
        <input type="text" name="circuito" required class="form-control" placeholder="circuito" autofocus>
    </div>
    <div class="form-group">
        <input type="text" name="lugar" required class="form-control" placeholder="lugar" autofocus>
    </div>
    <div class="form-group">
        <input type="date" name="fecha" required class="form-control" placeholder="fecha" autofocus>
    </div>
    <div class="form-group">
        <textarea  name="descripcion" rows="2"  class="form-control" placeholder="descripcion"></textarea>
    </div>
    <div class="form-group">
        <input type="text" name="username" required class="form-control" placeholder="username" autofocus>
    </div>
    <div class="form-group">
        <button class="btn btn-success btn-block" type="submit">Crear tarea</button>
    </div>
</form>



<h2>Listado de tareas</h2>
<ul>
  {{#each tasks}}
    <li>
      <strong>{{nombre_tablero}}</strong> - {{circuito}} - {{lugar}} - {{fecha}} - {{descripcion}}
    </li>
  {{/each}}
</ul>





<a href="/logout">Cerrar sesión</a>
